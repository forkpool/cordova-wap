<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>程序人生</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="build/index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="assets/baidu_logo.jpg" />
        <!-- you can use any density that exists in the Android project -->
        <splash src="assets/timg.jpg" density="land-hdpi"/>
        <splash src="assets/timg.jpg" density="land-ldpi"/>
        <splash src="assets/timg.jpg" density="land-mdpi"/>
        <splash src="assets/timg.jpg" density="land-xhdpi"/>
        <splash src="assets/timg.jpg" density="port-hdpi"/>
        <splash src="assets/timg.jpg" density="port-ldpi"/>
        <splash src="assets/timg.jpg" density="port-mdpi"/>
        <splash src="assets/timg.jpg" density="land-xhdpi"/>
        <splash src="assets/timg.jpg" density="land-xxhdpi"/>
        <splash src="assets/timg.jpg" density="land-xxxhdpi"/>
        <splash src="assets/timg.jpg" density="port-xhdpi"/>
        <splash src="assets/timg.jpg" density="port-xxhdpi"/>
        <splash src="assets/timg.jpg" density="port-xxxhdpi"/>
        <preference name="ShowSplashScreenSpinner" value="false"/><!--旋转进度条-->
        <preference name="FadeSplashScreenDuration" value="750"/><!--淡出效果的持续时间（默认是500毫秒），可以进行如下配置-->
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
